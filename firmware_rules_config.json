{
  "rules": {
    "atmega328p": {
      "chip_name": "Arduino Uno (ATmega328P)",
      "pin_restrictions": {
        "pin_1": {
          "description": "RX pin - Reserved for Serial communication",
          "allowed_modes": []
        },
       
        "pin_13": {
          "description": "Built-in LED pin",
          "allowed_modes": ["output"]
        }
      }
    },
    "atmega2560": {
      "chip_name": "Arduino Mega (ATmega2560)",
      "pin_restrictions": {
        "pin_0": {
          "description": "RX0 - Serial 0 communication",
          "allowed_modes": ["input"]
        },
        "pin_1": {
          "description": "TX0 - Serial 0 communication",
          "allowed_modes": ["output"]
        },
        "pin_13": {
          "description": "Built-in LED",
          "allowed_modes": ["output"]
        }
      }
    },
    "attiny85": {
      "chip_name": "ATtiny85",
      "pin_restrictions": {
        "pin_0": {
          "description": "Reset pin - Do not use as I/O",
          "allowed_modes": []
        }
      }
    }
  }
}
